{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "module": "nodenext", // use "nodenext" only if you want ES Modules (.mjs)
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"], // for Node.js type definitions

    /* Outputs */
    "sourceMap": true,
    "declaration": true, // generate .d.ts files
    "declarationMap": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Other */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
